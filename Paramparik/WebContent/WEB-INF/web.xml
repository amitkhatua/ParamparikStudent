  <servlet>
    <servlet-name>ContextLoaderServlet</servlet-name>
    <servlet-class>in.student.param.framework.ContextLoaderServlet</servlet-class>
    <load-on-startup>2</load-on-startup>
  </servlet>

   <filter-mapping>
      <filter-name>struts2</filter-name>
      <url-pattern>/*</url-pattern>
   </filter-mapping>
   
   <servlet>
  <servlet-name>JSonDataLoader</servlet-name>
  <servlet-class>in.student.param.framework.JSonDataLoader</servlet-class>
 </servlet>
   <servlet>
    <servlet-name>AttachmentViewer</servlet-name>
    <servlet-class>in.student.param.framework.AttachmentLoader</servlet-class>
  </servlet>
   <servlet-mapping>
  <servlet-name>JSonDataLoader</servlet-name>
  <url-pattern>/jsondataloader.data</url-pattern>
 </servlet-mapping>
 <servlet-mapping>
    <servlet-name>ContextLoaderServlet</servlet-name>
    <url-pattern>/ContextLoaderServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>AttachmentViewer</servlet-name>
    <url-pattern>/attachmentviwer.data</url-pattern>
  </servlet-mapping>
  
  <session-config>
  <session-timeout>50</session-timeout>
 </session-config>
 
</web-app>